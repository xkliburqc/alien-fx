<Window x:Class="AlienFX.Hub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Alien FX"
        Height="120"
        Width="400"
        x:Uid="MainWindow"
        Visibility="Hidden"
        d:Visibility="Visible">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="96"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Source="alienfx.ico" Margin="4"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Content="{Binding Title}" FontWeight="Bold"/>
            <Label Grid.Row="1" Content="{Binding Description}"/>
            <Label Grid.Row="2" Content="{Binding Version}"/>
        </Grid>
    </Grid>
</Window>
